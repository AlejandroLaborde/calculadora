<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".MainActivity">

<TextView
    android:id="@+id/data"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:textAlignment="textEnd"
    android:textSize="@android:dimen/app_icon_size"

    ></TextView>


<TextView
    android:id="@+id/result"
    android:textAlignment="textEnd"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:textSize="@android:dimen/app_icon_size"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />


<GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/buttonc"
        android:layout_width="100dp"
        android:layout_height="99dp"
        android:text="C"
        android:textSize="@android:dimen/app_icon_size"></Button>
    <Button
        android:text="()"
        android:textSize="@android:dimen/app_icon_size"
        android:id="@+id/buttonP"
        android:layout_width="100dp"
        android:layout_height="100dp"></Button>
    <Button
        android:text="+"
        android:textSize="@android:dimen/app_icon_size"
        android:id="@+id/botonSumar"
        android:layout_width="100dp"
        android:layout_height="100dp"></Button>
    <Button
        android:text="/"
        android:textSize="@android:dimen/app_icon_size"
        android:id="@+id/bottonDivide"
        android:layout_width="100dp"
        android:layout_height="100dp"></Button>

</GridLayout>

<GridLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:text="7"
        android:textSize="@android:dimen/app_icon_size"
        android:id="@+id/button7"
        android:layout_width="100dp"
        android:layout_height="100dp"></Button>
    <Button
        android:text="8"
        android:textSize="@android:dimen/app_icon_size"
        android:id="@+id/button8"
        android:layout_width="100dp"
        android:layout_height="100dp"></Button>
    <Button
        android:text="9"
        android:textSize="@android:dimen/app_icon_size"
        android:id="@+id/button9"
        android:layout_width="100dp"
        android:layout_height="100dp"></Button>
    <Button
        android:text="*"
        android:textSize="@android:dimen/app_icon_size"
        android:id="@+id/bottonMultiplica"
        android:layout_width="100dp"
        android:layout_height="100dp"></Button>


</GridLayout>

<GridLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:text="4"
        android:textSize="@android:dimen/app_icon_size"
        android:id="@+id/button4"
        android:layout_width="100dp"
        android:layout_height="100dp"></Button>
    <Button
        android:text="5"
        android:textSize="@android:dimen/app_icon_size"
        android:id="@+id/button5"
        android:layout_width="100dp"
        android:layout_height="100dp"></Button>
    <Button
        android:text="6"
        android:textSize="@android:dimen/app_icon_size"
        android:id="@+id/button6"
        android:layout_width="100dp"
        android:layout_height="100dp"></Button>
    <Button
        android:text="-"
        android:textSize="@android:dimen/app_icon_size"
        android:id="@+id/bottonMenos"
        android:layout_width="100dp"
        android:layout_height="100dp"></Button>


</GridLayout>
<GridLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:text="1"
        android:id="@+id/button1"
        android:textSize="@android:dimen/app_icon_size"
        android:layout_width="100dp"
        android:layout_height="100dp"></Button>
    <Button
        android:text="2"
        android:textSize="@android:dimen/app_icon_size"
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="100dp"></Button>
    <Button
        android:text="3"
        android:textSize="@android:dimen/app_icon_size"
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="100dp"></Button>
    <Button
        android:backgroundTint="@color/colorAccent"
        android:textSize="@android:dimen/app_icon_size"
        android:text="="
        android:id="@+id/bottonIgual"
        android:layout_width="100dp"
        android:layout_height="100dp"></Button>

</GridLayout>


</LinearLayout>